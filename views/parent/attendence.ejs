<style type="text/css">
	.Attendence-select{
	position: relative;
	}
	.table-responsive .select{
		position: absolute;
		transform: translateX(-50%) translateY(-50%);
		left: 50%;
		top: 15%;
		width: 460px;
		z-index: 9999;
	}
	.select select{
		width: 120px!important;
		float: left;
		height: 32px;
		margin: 0px 25px 0px 5px!important;
		border: 1px solid #ccc;
		background-color: #fff;
	}
</style>
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body Attendence-select">
			<h2 class="card-title"><b><u>Attendence</u></b></h2>
			<p class="card-description">
				<a href="#"><button class="btn btn-inverse-dark btn-fw">Attendence</button></a>
				
			</p>
			<div class="table-responsive">
				<div class="select">
						 
						
						
					<form class="form-inline" action="/action_page.php">
					  <div class="form-group">
					    <label for="email">Month</label>
					    <select class="form-control" id="month_id">
					    <%  Object.keys(month).forEach(function (key){ %>
					    	<option value="<%= key %>"><%= month[key] %></option>
					    	
					    <% }) %>
					    </select>
					  </div>
					  <div class="form-group">
					    <label for="pwd">Year</label>
					    <select class="form-control" id="currentyear" name="year"> 
					    	<option value="<%= year %>"><%= year %></option>
					    	<option value="<%= nextyear %>"><%= nextyear %></option>
					    	
					    </select>
					  </div>
					</form>
				</div>

				<table class="table table-bordered" id="myTable">
					<thead>
						<tr>
							<th>
								#
							</th>
							<th>
								Name 
							</th>
							<th>
								Class Name
							</th>	
							<th>Section Name</th>
							<th>
								Dob 
							</th>
							<th>
								Gender 
							</th>
							<th>
								Email
							</th>
							<th>Phone</th>
							<th>Action</th>
							
						</tr>
					</thead>
					<tbody>
					<%  var i=1; student_information.forEach(function(data){ %>
						<tr id="tr_<%= i %>">
							<td >

								<%= i %>
							</td>
							<td>
								<%= data.name %>
							</td>
							<td>
								<%= data.class_name %>
							</td>
							<td>
								<%= data.section_name %>
							</td>
							<td>
								<%= data.dob %>
							</td>

							<td>
								<%= data.sex %>
							</td>

							<td>
								<%= data.email %> 
							</td>

							<td>
								<%= data.phone %>
							</td>

							<td>
								<a href="javascript:void(0)"  onclick="get_parent_student_attendance('<%= data.class_id  %>','<%= data.section_id  %>','<%= data.registration_id  %>')" class="btn btn-sm btn-primary">View</a>
							</td>
							
						</tr>
					<% i++; })%>
					</tbody>
				</table>
			</div>
			<br><br>

		</div>
	</div>
</div>
