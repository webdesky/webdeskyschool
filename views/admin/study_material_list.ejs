<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h2 class="card-title"><b><u>Study Material List</u></b></h2>
			<p class="card-description">
				<a href="<%= appName %>/admin/study_material"><button class="btn btn-inverse-dark btn-fw">Add Study Material</button></a>
				
			</p>
			<div class="table-responsive">
            <table class="table table-bordered datatable" >
              <thead>
                <tr>
                  <th>
                    #
                  </th>
                  <th>
                   Class Name
                  </th>
                  <th>
                    Subject Name
                  </th>
                  <th>
                    Title
                  </th>
                  <th>
                    Description
                  </th>
                  <th>
                    Action
                  </th>
                  
                </tr>
              </thead>
              <tbody>
                <%  var i=1; document_list.forEach(function(document_list){ %>
                <tr>
                  <td>
                    <%= i %>
                  </td>
                  <td>
                    <%= document_list.class_name %>
                  </td>
                  <td>
                    <%= document_list.name %>
                  </td>
                  <td>
                    <%= document_list.title %>
                  </td>
                  <td>
                    <%= document_list.description %>
                  </td>
                  <td>
                      <% if(document_list.file_name){ %>   
                            <a href="<%= appName %>/study_material/<%= document_list.file_name %>"download="">
                               <button type="button" class="btn btn-success"> Download File </button>  
                             </a>
                      <% } %>
                      
                      <a href="<%= appName %>/admin/study_material/?id=<%= document_list.document_id %>">

                        <button type="button" class="btn btn-dark btn-fw">
                            <i class="mdi mdi-cloud-download"></i>Edit
                        </button>
                       </a>
                       <a href="#"  onclick="delete_record('<%= document_list.document_id %>','<%= i %>','tbl_document','document_id')" class="btn btn-sm btn-danger">Delete
                       </a>
                  </td>
                </tr>
                <% i++; })%>
              </tbody>
            </table>
          </div>
		</div>
	</div>
</div>
