<div class="content-wrapper">
  <div class="row">
    <div class="col-12 stretch-card">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title"><b><u>Shift Student Section</u></b></h1>
          <p class="card-description">
          <!-- <a href="<%= appName %>/admin/attendenceList"><button class="btn btn-inverse-dark btn-fw">Attendence List</button></a> -->
          </p>

          <div class="container">
           
            <% if(success!=""){ %>
            <div class="alert alert-success" id="success-alert">
              <button type="button" class="close" data-dismiss="alert">x</button>
              <strong><%= success %> </strong>
              
            </div>
              
           <% 
          } %>
          <% if(error!=""){ %>
            
             <div class="alert alert-danger" id="danger-alert">

              
              <button type="button" class="close" data-dismiss="alert">x</button>
              <strong><%= error %> </strong>
              
            </div>
         <% }  %>
        </div>
         <form class="forms-sample" method="post" id="form_shiftsection" action="<%= appName %>/admin/Shiftsection" enctype="multipart/form-data">
            <div id="attendence_student">
              <div class="form-group row">
              
                <label for="exampleInputEmail2" class="col-sm-2 col-form-label">Class Name</label>
                <div class="col-sm-2">
                 <select class="form-control" id="class_id" name="class_id">
                 	<option value="">Select Class</option>
                 	<%  class_list.forEach(function(class_list){ %>
                  <option value="<%= class_list.class_id  %>"><%= class_list.class_name; %></option>
  				        
                 	<%   }) %>
                 </select>
                </div>

                <label for="exampleInputPassword2" class="col-sm-2 col-form-label">Section Name</label>
                <div class="col-sm-2">
                 <select class="form-control" id="section_id_stop" onchange="getStudentToshift(this.value)();" >
                   <option>Select Section</option>
                 </select>
                </div>

              </div>

              <br><br><br>
              <div  style="display: none;" id="shiftTable">

                <div class="form-group">
                <label for="exampleInputPassword2" class="col-sm-1 col-form-label">Check All</label>
                <div class="col-sm-1">
                  <input type="checkbox" name=""  id="checkAll"> 
                </div>
               </div>
                

                <table class="display responsive nowrap tableshift" style="width: 100%" >
                  <thead>
                    <tr>
                      <th>
                        #
                      </th>
                     
                      <th>
                       Sudent Name
                      </th>
                      
                      
                      
                      
                      
                    </tr>
                  </thead>
                  <tbody >
                   
                  </tbody>
                </table>

                <br><br>
                <div class="form-group">
                <label for="exampleInputPassword2" class="col-sm-2 col-form-label">Section Name</label>
                <div class="col-sm-2">
                 <select class="form-control" name="section_id_stop2" id="section_id_stop2">
                   <option>Select Section</option>
                 </select>
                </div>
               </div>

                <br><br>
               <div class="form-group">
                <label for="exampleInputPassword2" class="col-sm-2 col-form-label">Section Name</label>
                <div class="col-sm-2">
                 <button type="submit" class="btn btn-success mr-2">Submit</button>
                 <!-- <button class="btn btn-light">Cancel</button> -->
                </div>
               </div>
 
              

              </div>
            </div>  
 
           
             
            
            
          </form>
        </div>
      </div>
    </div>
  </div>
</div>