<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h2 class="card-title"><b><u>Teacher List</u></b></h2>
			<p class="card-description">
				<a href="<%= appName %>/admin/Registration"><button class="btn btn-inverse-dark btn-fw">Add Teacher</button></a>
				
			</p>
			<div class="table-responsive">
				<table class="table table-bordered" id="myTable">
					<thead>
						<tr>
							<th>
								#
							</th>
							<th>
								Teacher Name
							</th>
							<th>
								Gender
							</th>
							<th>
								Email
							</th>
							<th>
								Phone
							</th>
							<th>
								Action
							</th>
							
						</tr>
					</thead>
					<tbody>
						<%  var i=1; teacher_list.forEach(function(teacher_list){ %>
						<tr id="tr_<%= i %>">
							<td>
								<%= i %>
							</td>
							<td>
								<%= teacher_list.name %>
							</td>
							<td>
								<%= teacher_list.sex %>
							</td>
							
							<td>
								<%= teacher_list.email %>
							</td>
							<td>
								<%= teacher_list.phone %>
							</td>
							<td>
							 <!-- <a href="#">
								<button type="button" class="btn btn-dark btn-fw">
                         	 	<i class="mdi mdi-cloud-download"></i>Edit
                         	 	</button>
                         	 </a> -->
  							 <a href="<%= appName %>/admin/teacherDetail/?registration_id=<%= teacher_list.registration_id %>">
                         	 	<button type="button" class="btn btn-dark btn-fw">
                         	 	<i class="mdi mdi-cloud-download"></i>Edit</button>
                         	 </a>
                         	 

                         	 <a href="#"  onclick="delete_record('<%= teacher_list.registration_id %>','<%= i %>','tbl_registration','registration_id')" class="btn btn-sm btn-danger">Delete</a>
                         	 </a>
							</td>
						</tr>
						<% i++; })%>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>