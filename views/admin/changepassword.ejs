<style type="text/css">
.form-check, .form-radio {
padding-left: 30px;
}
.abc::before {
left: 0;
}
</style>
<div class="content-wrapper">
 <div class="col-lg-12 grid-margin stretch-card">
   <div class="card">
     <div class="card-body">

        <h1 class="card-title"><b><u>Change Password</u></b></h1>
          <div class="container">
              <% if(success!=""){ %>
              <div class="alert alert-success" id="success-alert">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong><%= success %> </strong>
                
              </div>
              <% } %>
              <% if(error!=""){ %>
              
               <div class="alert alert-danger" id="danger-alert">
                <button type="button" class="close" data-dismiss="alert">x</button>
                <strong><%= error %> </strong>
              </div>
           <% }  %>
          </div>
          
          <form class="forms-sample" id="form_changepassword" method="post" action="<%= appName %>/admin/changepassword">
            
            <div class="form-group row">
              <label for="exampleInputEmail2" class="col-sm-3 col-form-label">New Password</label>
              <div class="col-sm-6">
               <input type="password" name="password" id="password" placeholder="Enter New password" class="form-control" value="">
               <span for="password"  class="error below" style="display: none"></span>
              </div>
            </div>
            <div class="form-group row">
              <label for="exampleInputPassword2" class="col-sm-3 col-form-label">Confirm Password</label>
              <div class="col-sm-6">
               <input type="password" name="password_confirm" id="password_confirm" placeholder="Enter confirm password" class="form-control" value="">
               <span for="password_confirm"  class="error below" style="display: none"></span>
              </div>
            </div>

            <div class="col-sm-12" align="center">
               <button type="submit" class="btn btn-success mr-2">Submit</button>
            </div>
          </form>
          <br><br>
     </div>
   </div>
 </div>    
</div>



 