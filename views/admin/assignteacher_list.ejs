<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h2 class="card-title"><b><u>Assign Teacher List</u></b></h2>
			<p class="card-description">
				<a href="<%= appName %>/admin/AssignTeacher"><button class="btn btn-inverse-dark btn-fw">Assign Teachers</button></a>
				
			</p>
			<div class="table-responsive">
				<table class="table table-bordered datatable">
					<thead>
						<tr>
							<th>
								#
							</th>
							<th>
								Class 
							</th>
							<th>
								Section 
							</th>
							<th>
								Subject 
							</th>
							<th>
								Teacher
							</th>
							<th>
								Action
							</th>
							
						</tr>
					</thead>
					<tbody>
					<%  var i=1; assign_list.forEach(function(data){ %>
						<tr id="tr_<%= i %>">
							<td >

								<%= i %>
							</td>
							<td>
								<%= data.class_name %>
							</td>
							<td>
								<%= data.section_name %>
							</td>
							
							<td>
								<%= data.subject_name %>
							</td>
							<td>
								<%= data.teacher_name %> 
							</td>
							
							<td>
							 <a href="<%= appName %>/admin/AssignTeacher/?id=<%= data.id %>">
								<button type="button" class="btn btn-dark btn-fw">
                         	 	<i class="mdi mdi-cloud-download"></i>Edit
                         	 	</button>
                         	 </a>
                         	 <a href="#"  onclick="delete_record('<%= data.id %>','<%= i %>','tbl_teacherassignment','id')" class="btn btn-sm btn-danger">Delete</a>

                         	 </td>

							
						</tr>
					<% i++; })%>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
