<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h2 class="card-title"><b><u>HomeWork List</u></b></h2>
			<p class="card-description">
				<a href="<%= appName %>/admin/HomeWork"><button class="btn btn-inverse-dark btn-fw">Add HomeWork</button></a>
				
			</p>
			<div class="table-responsive">
				<table class="table table-bordered" id="myTable">
					<thead>
						<tr>
							<th>
								#
							</th>
							<th>
								Class
							</th>
							<th>
								Section
							</th>
							<th>
								Subject
							</th>
							<th>
								Task
							</th>
							<th>
								Description
							</th>
							<th>
								Action
							</th>
							
						</tr>
					</thead>
					<tbody>
						<%  var i=1; homework_list.forEach(function(homework_list){ %>
						<tr>
							<td>
								<%= i %>
							</td>
							<td>
								<%= homework_list.class_name %>
							</td>
							<td>
								<%= homework_list.section_name %>
							</td>
							
							<td>
								<%= homework_list.name %>
							</td>
							<th>
								<%= homework_list.task %>
							</th>
							<td>
								<%= homework_list.description %>
							</td>
							<td>
							   <% if(homework_list.file_name){ %>   
	                            <a href="../../homework_image/<%= homework_list.file_name %>"download="">
	                               <button type="button" class="btn btn-success"> Download File </button>  
	                             </a>
	                             <% } %>
	                            <a href="#">
	                               <button type="button" onclick="delete_record('<%= homework_list.homework_id %>','<%= i %>','tbl_homework','homework_id')" class="btn btn-danger btn-fw">
	                                 <i class="mdi mdi-alert-outline"></i>Delete
	                               </button>
	                            </a>
							</td>
						</tr>
						<% i++; })%>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>